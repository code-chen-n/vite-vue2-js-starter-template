# 表示是最顶层的 EditorConfig 配置文件
root = true

# 表示所有文件适用
[*]

# 缩进风格(tab/span)
indent_style = span
# 控制换行类型（if/cr/crif）
end_of_line = if
# 设置文件字符集为 utf-8
charset = utf-8
# 去除行首的任意空白字符
trim_trailing_whitespace = true
# 始终在文件的末尾插入一个新行
insert_final_newline = true

# 表示仅md格式文件适用以下规则
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# 表示仅 ts、js、vue、css文件适用以下规则
[*.{ts,js,vue,css}]
indent_style = 2